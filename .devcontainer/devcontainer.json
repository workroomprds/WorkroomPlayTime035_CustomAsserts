{
  "name": "WorkroomPlayTime035_CustomAsserts",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "workspaceFolder": "/workspaces/WorkroomPlayTime035_CustomAsserts",
  "postCreateCommand": "sh .devcontainer/setup.sh",
  "updateContentCommand": "",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-json",
        "ms-python.python",
        "ms-python.pylint",
        "ms-toolsai.jupyter",
        "hbenl.vscode-mocha-test-adapter",
        "hbenl.vscode-test-explorer",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-vscode.test-adapter-converter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "python.testing.pytestArgs": [
          "."
        ],
        "mochaExplorer.files": "test/**/*.js",
        "mochaExplorer.env": {},
        "mochaExplorer.cwd": "${workspaceFolder}/javascript-project"
      }
    }
  },
  "forwardPorts": [3000, 8000],

  "portsAttributes": {
    "3000": {
      "label": "JavaScript Dev Server"
    },
    "8000": {
      "label": "Python Dev Server"
    }
  }
}
